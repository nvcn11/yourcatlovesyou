  <div class="card" aria-live="polite">
    <h1>Your Cat üê±</h1>
    <p class="subtitle">Hover or click the cat. Feed it to make it happier!</p>

    <!-- INTERACTIVE CAT -->
    <div class="cat-wrap" id="catWrap" title="Pet the cat">
      <!-- simple black cat SVG -->
      <svg class="cat-svg" viewBox="0 0 120 120" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Black cat">
        <!-- ears -->
        <polygon class="cat-face" points="20,30 34,8 46,34"/>
        <polygon class="cat-face" points="100,30 86,8 74,34"/>
        <!-- head -->
        <ellipse class="cat-face" cx="60" cy="62" rx="36" ry="34"/>
        <!-- eyes -->
        <ellipse class="cat-eye" cx="46" cy="60" rx="8" ry="10"/>
        <ellipse class="cat-eye" cx="74" cy="60" rx="8" ry="10"/>
        <ellipse class="cat-pupil" cx="46" cy="63" rx="4" ry="6"/>
        <ellipse class="cat-pupil" cx="74" cy="63" rx="4" ry="6"/>
        <!-- nose / mouth -->
        <path d="M60 74 q6 6 12 2" stroke="#ffb3c4" stroke-width="2" fill="none" stroke-linecap="round"/>
        <path d="M60 74 q-6 6 -12 2" stroke="#ffb3c4" stroke-width="2" fill="none" stroke-linecap="round"/>
      </svg>

      <!-- hearts (floating on hover) -->
      <div class="hearts" aria-hidden="true">
        <span class="heart1">üíó</span>
        <span class="heart2">üíñ</span>
