        <span class="heart4">üíñ</span>
      </div>
    </div>

    <!-- CAT LEVEL / EXPRESSION -->
    <div class="cat-level" id="catLevel" aria-hidden="false">üò∫</div>

    <div class="status" id="status">The cat is watching you lovingly‚Ä¶</div>

    <!-- CONTROLS: Feed, Pet -->
    <div class="controls">
      <button id="feedBtn" aria-pressed="false" title="Feed the cat">Feed ü•£</button>
      <button id="petBtn" title="Pet the cat">Pet üêæ</button>
    </div>

    <div class="meta" id="meta">Meals fed: 0 ¬∑ Last fed: never</div>

    <!-- FINAL VALENTINE MESSAGE -->
    <div class="valentine" id="valentine">
      üíå The cat says: "You make the world softer. Will you be my Valentine? üêæüíò"
    </div>

  </div>

<script>
(function(){
  // state
  const FEED_COOLDOWN_MS = 10 * 1000; // 10s demo cooldown (adjust as needed)
  const AFFECTION_TO_LEVEL_UP = 3;    // meals needed to change expression
  const SHOW_VALENTINE_MEALS = 5;     // meals threshold to reveal valentine

  const feedBtn = document.getElementById('feedBtn');
  const petBtn = document.getElementById('petBtn');
  const statusEl = document.getElementById('status');
  const metaEl = document.getElementById('meta');
  const catLevelEl = document.getElementById('catLevel');
  const valentineEl = document.getElementById('valentine');
  const catWrap = document.getElementById('catWrap');

  let meals = parseInt(localStorage.getItem('meals') || '0', 10);
  let lastFed = parseInt(localStorage.getItem('lastFed') || '0', 10);
  let affection = parseInt(localStorage.getItem('affection') || '0', 10);

  function updateMeta() {
    const lastText = lastFed ? timeAgo(lastFed) + ' ago' : 'never';
    metaEl.textContent = `Meals fed: ${meals} ¬∑ Last fed: ${lastText}`;
  }

  function timeAgo(ts) {
    const s = Math.floor((Date.now() - ts) / 1000);
    if (s < 60) return s + 's';
    const m = Math.floor(s/60);
    if (m < 60) return m + 'm';
    const h = Math.floor(m/60);
    return h + 'h';
  }

  function canFeed() {
    return (Date.now() - lastFed) >= FEED_COOLDOWN_MS;
  }

  function updateUI() {
    // level expression
    catLevelEl.textContent = affection >= AFFECTION_TO_LEVEL_UP ? 'üòª' : 'üò∫';
    // show valentine if enough meals fed
    if (meals >= SHOW_VALENTINE_MEALS) valentineEl.classList.add('show');
    else valentineEl.classList.remove('show');

    // disable feed button when on cooldown
    if (!canFeed()) {
      const seconds = Math.ceil((FEED_COOLDOWN_MS - (Date.now() - lastFed)) / 1000);
      feedBtn.disabled = true;
      feedBtn.textContent = `Wait ${seconds}s ‚è≥`;
    } else {
      feedBtn.disabled = false;
      feedBtn.textContent = 'Feed ü•£';
    }
    updateMeta();
  }

  function saveState() {
    localStorage.setItem('meals', String(meals));
    localStorage.setItem('lastFed', String(lastFed));
    localStorage.setItem('affection', String(affection));
  }

  feedBtn.addEventListener('click', () => {
    if (!canFeed()) {
      statusEl.textContent = 'The cat is not hungry yet ‚Äî give it a moment.';
      return;
    }
    // feed animation & state updates
    meals += 1;
    lastFed = Date.now();
    affection = Math.min(affection + 1, 9999);
    saveState();
    statusEl.textContent = 'üò∫ Yum! That was delicious!';
    feedBtn.classList.add('feed-animate');
    setTimeout(()=> feedBtn.classList.remove('feed-animate'), 500);
    updateUI();
  });

  // pet interaction: small affection boost and heart burst
  petBtn.addEventListener('click', () => {
    affection += 1;
    saveState();
    statusEl.textContent = 'Purr~ Thank you for the pets!';
    // small heart pop
    const heart = document.createElement('span');
    heart.textContent = 'üíó';
    heart.style.position = 'absolute';
    heart.style.left = Math.random() * 60 + 'px';
    heart.style.top = '-10px';
    heart.style.fontSize = '1.1rem';
    heart.style.opacity = '1';
    heart.style.transition = 'transform 0.9s ease, opacity 0.9s ease';
    const hearts = document.querySelector('.hearts');
    hearts.appendChild(heart);
    setTimeout(()=> {
      heart.style.transform = 'translateY(-50px) scale(1.2)';
      heart.style.opacity = '0';
    }, 10);
    setTimeout(()=> heart.remove(), 1000);
    updateUI();
  });

  // pet by clicking the cat as well
  catWrap.addEventListener('click', () => {
    petBtn.click();
  });

  // periodic UI refresh for cooldown counter
  setInterval(updateUI, 1000);

  // initial render
  updateUI();

  // expose for debugging (optional)
  window._yourCat = {
    feed: () => feedBtn.click(),
    pet: () => petBtn.click(),
    state: () => ({meals, lastFed, affection})
  };
})();
</script>

</body>
</html>